SHELL := /bin/bash
COMPOSE := docker compose
BASE := -f docker-compose.yml
PROD := -f docker-compose.prod.yml

.PHONY: up down logs ps build restart

up:
	$(COMPOSE) $(BASE) $(PROD) up -d --build

down:
	$(COMPOSE) $(BASE) $(PROD) down

logs:
	$(COMPOSE) $(BASE) $(PROD) logs -f --tail=200

ps:
	$(COMPOSE) $(BASE) $(PROD) ps

build:
	$(COMPOSE) $(BASE) $(PROD) build

restart:
	$(COMPOSE) $(BASE) $(PROD) restart